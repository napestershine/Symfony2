{% extends "::layout.html.twig" %}
{% block title %}{{ 'inbox.sendMessageTo'|trans({'%name%': to.username}) }}{% endblock %}

{% block body %}
<div class="text-center">
  <a href="{{ path('pds_home_inbox') }}" class="btn btn-primary">
    {{ 'common.back'|trans }}
  </a>
</div>
<form action="" method="post" id="id-message-form" class="form-horizontal message-form no-border-bottom col-xs-12">
  <div>
    <div class="form-group">
      <label class="col-sm-3 control-label no-padding-right" for="form-field-recipient">
        {{ 'inbox.dest'|trans }}&nbsp;:
      </label>
      <div class="col-sm-9">
        <span class="input-icon" style="width: 80%;">
          <input type="text" class="col-sm-10" name="recipient" id="form-field-recipient" value="{% if to is defined %}{{ to.username }}{% endif %}" placeholder="Destinataire">
          <input type="hidden" value="{% if to is defined %}{{ to.id }}{% endif %}" name="user_to_id" id="user_to_id" />
          <i class="blue ace-icon fa fa-user" id="searchIcon"></i>
          <ul class="dropdown-menu" id="searchResults"></ul>
        </span>
      </div>
    </div>
    <div class="hr hr-18 dotted"></div>
    <div class="form-group">
      <label class="col-sm-3 control-label no-padding-right">
        <span class="inline space-24 hidden-480"></span>
        {{ 'inbox.msg'|transchoice(0) }}&nbsp;:
      </label>
      <div class="col-sm-6">
        <textarea class="autosize-transition form-control height-150" name="message" placeholder="Votre message ici"></textarea>
      </div>
    </div>
    <div class="hr hr-18 dotted"></div>
    <div class="align-center">
      <button id="id-add-attachment" type="submit" class="btn btn-sm btn-success">
        <i class="ace-icon fa fa-send bigger-140"></i>
        Envoyer
      </button>
      <input type="hidden" value="1" name="submit" />
    </div>
    <div class="space"></div>
  </div>
</form>
{% endblock body %}

{% block js %}
<script type="text/javascript">$(function(){ new SendMessage(); });</script>
{% endblock js %}