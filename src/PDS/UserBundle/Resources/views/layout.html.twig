<!DOCTYPE html>
<html lang="fr">
  <head>
    <title>{% block title %}PDS{% endblock %}</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <link rel="icon" href="{{ asset('icones/32/gymnast5.png') }}">
    {% stylesheets
      '@PDSUserBundle/Resources/public/css/main.css'
      'css/*' %}
      <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
    {% endstylesheets %}
    <!--[if lte IE 9]>
      <link rel="stylesheet" href="{{ asset('css/ace-part2.min.css') }}" />
      <link rel="stylesheet" href="{{ asset('css/ace-ie.min.css') }}" />
    <![endif]-->
    <!--[if lte IE 8]>
      <script src="{{ asset('js/html5shiv.min.js') }}"></script>
      <script src="{{ asset('js/respond.min.js') }}"></script>
      <script src="{{ asset('js/excanvas.min.js') }}"></script>
    <![endif]-->
  </head>
  <body class="login-layout blur-login">
    <div style="margin: 40px 20px; text-align: center;background-color: white;">
      {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        Connecté en tant que {{ app.user.username }} - <a href="{{ path('fos_user_security_logout') }}">Déconnexion</a>
      {% endif %}
    </div>
    <div class="main-container">
      <div class="main-content">
        <div class="row">
		  <div class="col-sm-10 col-sm-offset-1">
		    <div class="login-container">
		      <div class="center">
		        <h1>
		          <i class="ace-icon fa fa-leaf green"></i>
		          <span class="red">Programme</span>
		          <span class="white" id="id-text2">de sport</span>
		        </h1>
		        <h4 class="light-blue" id="id-company-text">&copy; Thomas Koenig</h4>
		      </div>
		      <div class="space-6"></div>
		      <div class="position-relative">
		        <div class="visible widget-box no-border {% block class %}{% endblock class %}">
		          <div class="widget-body">
		            <div class="widget-main">
		              {% block body %}
                        {% block fos_user_content %}
                        {% endblock fos_user_content %}
                      {% endblock %}
		            </div><!-- /.widget-main -->
		            <div class="toolbar clearfix">
		              {% block fos_user_footer %}
                      {% endblock fos_user_footer %}
		            </div>
	              </div><!-- /.widget-body -->
	            </div><!-- /.login-box -->
	          </div><!-- /.position-relative -->
	        </div>
	      </div><!-- /.col -->
	    </div><!-- /.row -->
      </div>
    </div>
    {% javascripts 'js/*' %}
      <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% block javascript %}
    {% endblock %}
  </body>
</html>
